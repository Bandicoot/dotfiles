# Update Brew
update

# Add additional taps
tap homebrew/dupes
tap phinze/cask
tap samueljohn/python

install git
install mercurial

install vim
install tmux

install python

# ============================================================================
# Cask Installs
# ============================================================================

install brew-cask

cask install google-chrome
cask install google-hangouts
cask install iterm2
cask install virtualbox
cask install vagrant
