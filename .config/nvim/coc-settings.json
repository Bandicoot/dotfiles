{
  "languageserver": {
    "go": {
      "command": "gopls",
      "rootPatterns": ["go.mod"],
      "trace.server": "verbose",
      "filetypes": ["go"]
    },
    "bash": {
      "command": "bash-language-server",
      "args": ["start"],
      "filetypes": ["sh"],
      "ignoredRootPaths": ["~"]
    }
  },
  "go.goplsOptions": {
      "completeUnimported": true
  },
  "yaml.schemas": {
      "kubernetes": "/*.yaml"
  },
  "diagnostic.checkCurrentLine": true
}
