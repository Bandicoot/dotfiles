# s3cmd encrypted
function s3cmde() {
    if [ -f ~/.s3cfg.encrypted ]; then
        gpg --decrypt -o ~/.s3cfg ~/.s3cfg.encrypted
        s3cmd $@
        rm ~/.s3cfg
    else
        s3cmd $@
    fi
}
