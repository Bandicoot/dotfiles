function fecter() {
    facter ${*} | sed 's/[a|A|e|E|i|I]/e/g'
}
function peppet() {
    puppet ${*} | sed 's/[a|A|e|E|i|I]/e/g'
}
function heere() {
    hiera ${*} | sed 's/[a|A|e|E|i|I]/e/g'
}
function cfecter() {
    cfacter ${*} | sed 's/[a|A|e|E|i|I]/e/g'
}

